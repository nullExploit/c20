<%- include('partials/header') %>
    <div class="card mt-5">
        <div class="card-header p-4">
            <h1 class="text-center">Adding Data</h1>
        </div>
        <form action="" autocomplete="off" method="post">
            <div class="m-3 row">
                <label for="name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>"
                        placeholder="Insert your name" required>
                </div>
            </div>
            <div class="m-3 row">
                <label for="height" class="col-sm-2 col-form-label">Height</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="height" name="height"
                        value="<%= data.height ? data.height : '' %>" placeholder="Insert your height">
                </div>
            </div>
            <div class="m-3 row">
                <label for="weight" class="col-sm-2 col-form-label">Weight</label>
                <div class="col-sm-10">
                    <input type="number" step="0.001" class="form-control" id="weight" name="weight"
                        value="<%= data.weight ? data.weight : '' %>" placeholder="Insert your weight">
                </div>
            </div>
            <div class="m-3 row">
                <label for="birthdate" class="col-sm-2 col-form-label">Birth Date</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="birthdate" name="birthdate"
                        value="<%= data.birthdate %>">
                </div>
            </div>
            <div class="m-3 row">
                <label for="married" class="col-sm-2 col-form-label">Is Married</label>
                <div class="form-check col-sm-1">
                    <label class="form-check-label" for="marriedFalse">Not yet</label>
                    <input class="form-check-input" type="radio" name="married" id="marriedFalse" value="false"
                        <%=!data.married ? "checked" : "" %>>

                    <label class="form-check-label" for="marriedTrue">Yes</label>
                    <input class="form-check-input" type="radio" name="married" id="marriedTrue" value="true"
                        <%=data.married ? "checked" : "" %>>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-primary w-25">Save</button>
                    <a href="/" class="btn btn-warning w-25">Back</a>
                </div>
            </div>

        </form>
    </div>

    <%- include('partials/footer') %>